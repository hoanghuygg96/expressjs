extends ../layouts/common.pug
block content
  section.container
    .row
      if products
        each product in products
          .col-3.my-5
            img(class="img-fluid", src=product.image, width="100%")
            h5 #{product.name}
            p=product.description
            p=product.price
            a(class="btn btn-primary", href= "/cart/add/" + product.id) Add to cart